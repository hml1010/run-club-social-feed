
.profile-header {
  display: flex;
  align-items: center;
  gap: 30rpx;
}

.profile-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(102, 126, 234, 0.2);
}

.profile-info {
  flex: 1;
}

.profile-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.profile-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.profile-badge {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  display: inline-block;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #eee;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 40rpx;
  width: 80rpx;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.menu-arrow {
  font-size: 32rpx;
  color: #ccc;
}

.btn-logout {
  background: #f44336;
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 24rpx;
  font-size: 28rpx;
  width: 100%;
}
